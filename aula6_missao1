class Esportista
  def competir
    puts "Participando de uma competição"
  end
end

class JogadorDeFutebol < Esportista #herdando os methods da classe Esportista
  def correr
    puts "Correndo atrás da bola"
  end
end

class Maratonista < Esportista
  def correr
    puts "Percorrendo o circuito"
  end
end

maratonista = Maratonista.new #criando o objeto para a classa
maratonista.competir
maratonista.correr

jogador = JogadorDeFutebol.new #criando o objeto para a classa
jogador.competir
jogador.correr
